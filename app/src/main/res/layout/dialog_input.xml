<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPrompt"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textSize="24sp"
        android:textColor="@color/Phoenix_Black" />

    <EditText
        android:id="@+id/edtLockPass"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/txtPrompt"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btnEnter"
        android:background="@drawable/x_border"
        android:fontFamily="@font/okuda"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:text="@string/blank"
        android:textSize="24sp"
        tools:ignore="LabelFor,RtlSymmetry" />
    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/x_blue_button"
        android:fontFamily="@font/okuda"
        android:paddingTop="45dp"
        android:text="@string/enter"
        android:textColor="@color/Phoenix_Black"
        android:textSize="18sp" />
</RelativeLayout>